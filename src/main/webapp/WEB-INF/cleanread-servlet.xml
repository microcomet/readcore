<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx" 
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd 
http://www.springframework.org/schema/mvc  http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

  <!-- 配置使用注解的类位置，以便Spring MVC自动扫描 -->
  <context:component-scan base-package="com.cleanread.controller" />
  
  <!-- 启用Spring MVC注解：同时开启注解处理器和注解适配器 -->
  <mvc:annotation-driven />
  
<!-- 请求和注解POJO的映射 -->
<!--    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter"/>
-->  
  <!-- 视图解析器配置 -->
  <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver" />
  
  <!-- 配置json解析器 -->
  <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter" />
  
  <bean id="userService" class="com.cleanread.serviceImpl.UserServiceImpl" scope="prototype">
    <property name="sqlSessionTemplate" ref="sqlSessionTemplate" />
  </bean>
  
  <bean id="novelService" class="com.cleanread.serviceImpl.NovelServiceImpl" scope="prototype">
    <property name="sqlSessionTemplate" ref="sqlSessionTemplate" />
  </bean>
  
</beans>